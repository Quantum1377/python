// --- SECURITY: middleware example (rate limiting + basic bot protection)
// middleware.js (root)
import { NextResponse } from 'next/server'
import LRU from 'lru-cache'

// simple in-memory limiter for preview/demo ‚Äî replace with Redis for production
const tokenCache = new LRU({ max: 500, ttl: 1000 * 60 })

export function middleware(req) {
  const ip = req.ip || req.headers.get('x-real-ip') || 'unknown'
  const key = `rl:${ip}`
  const current = tokenCache.get(key) || 0
  if (current > 200) {
    return new NextResponse('Too many requests', { status: 429 })
  }
  tokenCache.set(key, current + 1)
  return NextResponse.next()
}

export const config = { matcher: '/api/:path*' }

// --- API example (contact lead) pages/api/contact.js
import rateLimit from 'express-rate-limit'

// NOTE: Next.js API routes run on Node; this is an illustrative example.
export default async function handler(req, res){
  if (req.method !== 'POST') return res.status(405).end()
  // Basic validation
  const { name, message, phone } = req.body
  if (!name || !message) return res.status(400).json({ error: 'Missing fields' })
  // Here you'd sanitize inputs and store lead in DB with parameterized queries
  // Return success (in production, add recaptcha verification server-side)
  return res.status(200).json({ ok: true })
}

